# Используем образ Node.js
FROM node:20.11.1

# Установка рабочей директории
WORKDIR /app

# Копирование зависимостей и установка их
COPY package*.json ./

# Установка зависимостей
RUN npm install

# Копирование остальных файлов приложения
COPY . .

# Сборка приложения и запуск сервера
CMD ["npm", "run", "dev"]
